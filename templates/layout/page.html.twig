
{#
/**
 * @file
 * Theme override to display a single page.
 *
 * The doctype, html, head and body tags are not in this template. Instead they
 * can be found in the html.html.twig template in this directory.
 *
 * Available variables:
 *
 * General utility variables:
 * - base_path: The base URL path of the Drupal installation. Will usually be
 *   "/" unless you have installed Drupal in a sub-directory.
 * - is_front: A flag indicating if the current page is the front page.
 * - logged_in: A flag indicating if the user is registered and signed in.
 * - is_admin: A flag indicating if the user has permission to access
 *   administration pages.
 *
 * Site identity:
 * - front_page: The URL of the front page. Use this instead of base_path when
 *   linking to the front page. This includes the language domain or prefix.
 *
 * Page content (in order of occurrence in the default page.html.twig):
 * - messages: Status and error messages. Should be displayed prominently.
 * - node: Fully loaded node, if there is an automatically-loaded node
 *   associated with the page and the node ID is the second argument in the
 *   page's path (e.g. node/12345 and node/12345/revisions, but not
 *   comment/reply/12345).
 *
 * Regions:
 * - page.header: Items for the header region.
 * - page.nav_main: Items for the main navigation region.
 * - is_front: Conditional for the front page.
 * - page.content: The main content of the current page.
 * - page.footer_one: Items for the first footer region.
 * - page.footer_two: Items for the second footer region.
 * - page.footer_three: Items for the third footer region.
 * - footer_copyright: Copyright information for the footer.
 *
 * @see template_preprocess_page()
 * @see html.html.twig
 */
#}

<!-- Header & Navbar Section -->
{% if page.header or page.nav_main %}
	<header class="menu-header header-top">
		<nav class="nav-container">
			<div class="nav_logo">
				{{ page.header }}
			</div>
			{{ page.nav_main }}
			<div class="hamburger">
				<span class="bar"></span>
				<span class="bar"></span>
				<span class="bar"></span>
			</div>
		</nav>
	</header>
{% endif %}

<!-- Hero Section -->
{% if is_front %}
	<section class="hero_section">
		<div class="section_container">
			<div class="hero_container">
				<div class="text_section">
					<h2>{{ banner_title }}</h2>
					<h3>{{ banner_sub_title }}</h3>
					<p>{{ banner_description }}</p>
					<div class="hero_section_button">
						<a href="{{ banner_button_url }}" class="button btn-menu">{{ banner_button_text }}</a>
					</div>
				</div>
				<div class="image_section">
					<img src="{{ banner_bg_img }}" alt="banner-img" class="home-img">
				</div>
			</div>
		</div>
	</section>
{% endif %}
<!--Main Content Section-->
<main>
	<div class="main_container">
		{{ page.content }}
	</div>
</main>

<!-- Footer Section -->
{% if page.footer_one or page.footer_two or page.footer_three or footer_copyright or show_social_icon or show_footer_logo %}
	<footer class="footer">
		<div class="section_container">
			<div class="footer_section">
				{% if show_social_icon or show_footer_logo %}
					<div class="footer_logo footer-item">

						{% if show_footer_logo %}
							<a href="{{ path('<front>') }}" class="footer-logo">
								<img src="{{ logo_footer }}" alt="{{ 'footer logo'|t }}">
							</a>
						{% endif %}
						{% if show_social_icon %}
							<div class="follow_us">
								{% if facebook_url %}
									<a href="{{facebook_url}}">
										<i class="fa-brands fa-facebook-f"></i>
									</a>
								{% endif %}
								{% if youtube_url %}
									<a href="{{youtube_url}}" target="_blank">
										<i class="fa-brands fa-youtube"></i>
									</a>
								{% endif %}
								{% if instagram_url %}
									<a href="{{instagram_url}}" target="_blank">
										<i class="fa-brands fa-instagram"></i>
									</a>
								{% endif %}
								{% if twitter_url %}
									<a href="{{twitter_url}}" target="_blank">
										<i class="fa-brands fa-x-twitter"></i>
									</a>
								{% endif %}
							</div>
						{% endif %}
						{{ page.footer_one }}
					</div>
				{% endif %}
				<div class="useful_links footer-item">
					{{ page.footer_two }}
				</div>
				<div class="contact_us footer-item">
					<h2>Contact Us</h2>
					<ul>
						<li>
							{% if address %}
							<i class="fa-sharp fa-solid fa-location-crosshairs"></i>
								<span>{{ address }}</span>
							{% endif %}
						</li>
						</li>
						<li>
							{% if contact %}
							<i class="fa-sharp fa-solid fa-phone-volume"></i>
								<span>{{ contact }}</span>
							{% endif %}
						</li>
						<li>
							{% if mail_id %}
							<i class="fa-solid fa-envelope"></i>
								<span>{{ mail_id }}</span>
							{% endif %}
						</li>
					</ul>
						{{ page.footer_three }}
				</div>
			</div>
		</div>
		<div class="copyright">{{ footer_copyright }}</div>
	</footer>
{% endif %}

<div class="preLoader">
	<div class="loader">
		<div></div>
		<div></div>
	</div>
</div>

<a id='toTop' href="#" class="{{ back_to_top }}">
<i class="fas fa-chevron-up fa-lg totop-icon" style="color: #3b141c;"></i>
</a>


